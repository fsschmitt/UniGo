<div id="login-top">
  <div id="login-container">
    <h2>Alterar perfil</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>

      <!--<div><%= current_user.name %></div>
      <div><%= current_user.telephone %></div>-->

      <div><%= f.label :email %><br />
      <%= f.email_field :email %></div>

      <div><%= f.label :nome %><br />
      <%= f.text_field :name %></div>

      <div><%= f.label :telefone %><br />
      <%= f.text_field :telephone %></div>

      <div><%= f.label :password %> <i>(deixe em branco caso não queira mudar)</i><br />
      <%= f.password_field :password, :autocomplete => "off" %></div>

      <div><%= f.label :confirmacao_da_password %><br />
      <%= f.password_field :password_confirmation %></div>

      <div><%= f.label :current_password %> <i>(precisamos de confirmar a password atual para realizar as mudanças)</i><br />
      <%= f.password_field :current_password %></div>

      <div><%= f.submit "Alterar" %></div>
    <% end %>
    <div class="white">
    <%= link_to "Cancelar minha conta", registration_path(resource_name), :confirm => "Tem a certeza?", :method => :delete %>
    <br />
    <%= link_to "Voltar", :back %>
    </div>

  </div>
</div>
<div id="login-top-container">
  <div id="login-top-container-pic">
    <a href=<%= url_for(:root) %> ><img src="<%= asset_path('logo-top.png') %>"></a>
  </div>
</div>
<div id="login-bottom">
  <div id="login-bottom-container">
    <a href=<%= url_for(:root) %> ><img src="<%= asset_path('logo-bottom.png') %>"></a>
  </div>
</div>