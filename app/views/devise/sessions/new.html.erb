<div id="login-top">
	<div id="login-container">
			<h2>Sign in</h2>

			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div><%= f.label :email %><br />
			  <%= f.email_field :email %></div>

			  <div><%= f.label :password %><br />
			  <%= f.password_field :password %></div>

			  <% if devise_mapping.rememberable? -%>
			    <div><%= f.check_box :remember_me %> <%= f.label :Lembrar %></div>
			  <% end -%>

			  <div><%= f.submit "Entrar" %></div>
			<% end %>

			<%= render :partial => "devise/shared/links" %>
	</div>
</div>
<div id="login-top-container">
	<div id="login-top-container-pic">
		<a href=<%= url_for(:root) %> ><img src="<%= asset_path('logo-top.png') %>"></a>
	</div>
</div>
<div id="login-bottom">
	<div id="login-bottom-container">
		<a href=<%= url_for(:root) %> ><img src="<%= asset_path('logo-bottom.png') %>"></a>
	</div>
</div>

