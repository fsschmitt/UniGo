<div id="login-top">
	<div id="login-container">
		<h2>Reenviar instruções para o desbloqueio</h2>

		<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div><%= f.label :email %><br />
		  <%= f.email_field :email %></div>

		  <div><%= f.submit "Reenviar" %></div>
		<% end %>

		<%= render :partial => "devise/shared/links" %>

	</div>
</div>
<div id="login-top-container">
	<div id="login-top-container-pic">
		<a href=<%= url_for(:root) %> ><img src="<%= asset_path('logo-top.png') %>"></a>
	</div>
</div>
<div id="login-bottom">
	<div id="login-bottom-container">
		<a href=<%= url_for(:root) %> ><img src="<%= asset_path('logo-bottom.png') %>"></a>
	</div>
</div>