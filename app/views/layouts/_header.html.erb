    <a href=<%= url_for(:root) %> ><img id="logo" src="<%= asset_path('logo-top.png') %>"></a>
    <div id="search-stuff">
      <form accept-charset="UTF-8" action="/home/search" method="get">
        <input id="query" name="query" type="text" />
