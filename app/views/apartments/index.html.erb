<h1>Listing apartments</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Zone</th>
    <th>Max price</th>
    <th>Min price</th>
    <th>Type</th>
    <th>Description</th>
    <th>Water</th>
    <th>Electricity</th>
    <th>Television</th>
    <th>Internet</th>
    <th>Size</th>
    <th>Preference</th>
    <th>N available</th>
    <th>Creator</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @apartments.each do |apartment| %>
  <tr>
    <td><%= apartment.title %></td>
    <td><%= apartment.zone %></td>
    <td><%= apartment.max_price %></td>
    <td><%= apartment.min_price %></td>
    <td><%= apartment.ap_type %></td>
    <td><%= apartment.description %></td>
    <td><%= apartment.water %></td>
    <td><%= apartment.electricity %></td>
    <td><%= apartment.television %></td>
    <td><%= apartment.internet %></td>
    <td><%= apartment.size %></td>
    <td><%= apartment.preference %></td>
    <td><%= apartment.n_available %></td>
    <td><%= apartment.creator %></td>
    <td><%= link_to 'Show', apartment %></td>
    <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
    <td><%= link_to 'Destroy', apartment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

